<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/text_deng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_deng"
        android:layout_marginTop="30dp"
        android:hint="用户名/邮政/手机号"
        />
    <EditText
        android:id="@+id/edit_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_phone"
        android:layout_marginTop="30dp"
        android:hint="显示密码"
        />
    <Button
        android:id="@+id/button_deng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/edit_pwd"
        />

    <TextView
        android:id="@+id/zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_deng"
        android:text="手机快速注册"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_deng"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/text_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第三方登录"
        app:layout_constraintTop_toBottomOf="@id/pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_marginTop="70dp"
        />

    <ImageView
        android:id="@+id/weixin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_san"
        android:background="@drawable/umeng_socialize_wechat"
        app:layout_constraintRight_toLeftOf="@id/QQ"
        />
    <ImageView
        android:id="@+id/QQ"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/weixin"
        android:background="@drawable/umeng_socialize_qq"
        app:layout_constraintTop_toBottomOf="@id/text_san"
        app:layout_constraintRight_toLeftOf="@id/kong"
        />
    <ImageView
        android:id="@+id/kong"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/QQ"
        android:background="@drawable/umeng_socialize_qzone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_san"
        />




</android.support.constraint.ConstraintLayout>